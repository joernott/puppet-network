###
### File managed by Puppet
###
NAME=<%= @interface %>
DEVICE=<%= @interface %>
BOOTPROTO=<%= @bootproto %>
<% if @macaddress %>HWADDR=<%= @macaddress %>
<% end -%>
ONBOOT=<%= @onboot %>
<% if @netboot %>NETBOOT=<%= @netboot %>
<% end -%>
HOTPLUG=<%= @hotplug %>
TYPE=Ethernet
<% if @ipaddress %>IPADDR=<%= @ipaddress %>
<% end -%>
<% if @netmask %>NETMASK=<%= @netmask %>
<% end -%>
<% if @gateway %>GATEWAY=<%= @gateway %>
<% end -%>
<% if @mtu %>MTU=<%= @mtu %>
<% end -%>
<% if @bonding_opts %>BONDING_OPTS="<%= @bonding_opts %>"
<% end -%>
<% if @dhcp_hostname %>DHCP_HOSTNAME="<%= @dhcp_hostname %>"
<% end -%>
<% if @ethtool_opts %>ETHTOOL_OPTS="<%= @ethtool_opts %>"
<% end -%>
<% if !@peerdns %>PEERDNS=no
<% else %>PEERDNS=yes
<% if @dns1_real %>DNS1=<%= @dns1_real %>
<% end -%>
<% if @dns2_real %>DNS2=<%= @dns2_real %>
<% end -%>
<% if @domain %>DOMAIN="<%= @domain %>"
<% end -%>
<% end -%>
<% if @userctl %>USERCTL=yes
<% end -%>
<% if @ipv6init %>
IPV6INIT=yes
<% if !@ipv6autoconf %>IPV6_AUTOCONF=no
<% else %>IPV6_AUTOCONF=yes
<% end -%>
<% if @ipv6address %>IPV6ADDR=<%= @ipv6address %>
<% end -%>
<% if @ipv6gateway %>IPV6_DEFAULTGW=<%= @ipv6gateway %>
<% end -%>
<% if !@ipv6peerdns %>IPV6_PEERDNS=no
<% else %>IPV6_PEERDNS=yes
<% end -%>
<% else %>
IPV6INIT=no
<% end -%>
<% if @bridge %>BRIDGE=<%= @bridge %>
<% end -%>
<% if @linkdelay %>LINKDELAY=<%= @linkdelay %>
<% end -%>
<% if @userctl %>USERCTL=<%= USERCTL %>
<% end -%>
NM_CONTROLLED=no
<% if @devicetype %>DEVICETYPE=<%= @devicetype %>
<% end -%>
<% if @type %>TYPE=<%= @type %>
<% end -%>
<% if @ovs_bridge %>OVS_BRIDGE=<%= ovs_bridge %>
<% end -%>
